{
  "name": "desktopapp",
  "version": "1.0.0",
  "description": "Desktop application with dashboard",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
